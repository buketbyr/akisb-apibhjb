{
  "name": "observations-app",
  "version": "0.2.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
   "vercel-build": "prisma generate && sh -c 'if [ -n \"$DATABASE_URL\" ] && echo \"$DATABASE_URL\" | grep -q \"schema=\"; then echo \"✅ DATABASE_URL with schema detected\"; prisma db push; else echo \"⚠️ DATABASE_URL missing schema= , skipping db push\"; fi' && next build",
    "start": "next start",
    "postinstall": "prisma generate",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push"
  },
  "dependencies": {
    "next": "13.4.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "@prisma/client": "^5.14.0"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "@types/node": "20.2.5",
    "@types/react": "18.2.14",
    "@types/react-dom": "18.2.7",
    "prisma": "^5.14.0",
    "tailwindcss": "^3.4.3",
    "postcss": "^8.4.31",
    "autoprefixer": "^10.4.16"
  }
}
